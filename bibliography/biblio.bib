title = {{COSMIC RAYS CAN DRIVE STRONG OUTFLOWS FROM GAS-RICH HIGH-REDSHIFT DISK GALAXIES}},
url = {http://adsabs.harvard.edu.ezproxy.lib.utexas.edu/abs/2013ApJ...777L..38H},
volume = {777},
year = {2013}
}
