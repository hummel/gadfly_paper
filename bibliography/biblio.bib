journal = {\apj},
keywords = {early universe,stars: Population III,stars: abundances,stars: formation},
month = {aug},
number = {1},
pages = {32},
title = {{THE MASS SPECTRUM OF THE FIRST STARS}},
url = {http://adsabs.harvard.edu/abs/2014ApJ...792...32S},
volume = {792},
year = {2014}
}
