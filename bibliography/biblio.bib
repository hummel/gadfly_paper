journal = {ApJ, submitted (arXiv:1208.2422)},
keywords = {Astrophysics - Galaxy Astrophysics,Astrophysics - High Energy Astrophysical Phenomena},
title = {{High Mass X-ray Binaries: Future Evolution and Fate}},
url = {http://adsabs.harvard.edu.ezproxy.lib.utexas.edu/abs/2012arXiv1208.2422B},
year = {2012}
}
@article{deSouzaetal2013,
