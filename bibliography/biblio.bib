journal = {MNRAS, submitted (arXiv:1602.06948)},
keywords = {Astrophysics - Astrophysics of Galaxies,Astrophysics - Cosmology and Nongalactic Astrophys},
month = {feb},
title = {{The First Stars: formation under cosmic ray feedback}},
url = {http://adsabs.harvard.edu/abs/2016arXiv160206948H http://arxiv.org/abs/1602.06948},
