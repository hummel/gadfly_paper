journal = {\apj},
keywords = {Cosmology: Theory,Galaxies: High-Redshift,Hydrodynamics,Stars: Formation},
month = {jan},
number = {1},
pages = {14--33},
title = {{Population III Star Formation in a $\Lambda$CDM Universe. II. Effects of a Photodissociating Background}},
url = {http://adsabs.harvard.edu.ezproxy.lib.utexas.edu/abs/2008ApJ...673...14O},
volume = {673},
year = {2008}
}
@article{TrentiStiavelliShull2009,
abstract = {While the average metallicity of the intergalactic medium rises above Z gsim 10-3 Z sun by the end of the reionization, pockets of metal-free gas can still exist at later times. We quantify the presence of a long tail in the formation rate of metal-free halos during late stages of reionization (redshift z ≈ 6), which might offer the best window to detect Population III stars. Using cosmological simulations for the growth of dark matter halos, coupled with analytical recipes for the metal enrichment of their interstellar medium, we show that pockets of metal-free gas exist at z ≈ 6 even under the assumption of high efficiency in metal pollution via winds. A comoving metal-free halo formation rate d 2 n/dt dV gsim 10-9 Mpc-3 yr-1 is expected at z = 6 for halos with virial temperature T vir ≈ 104 K (mass {\~{}}108 M sun), sufficient to initiate cooling even with strong negative radiative feedback. These halos will appear as absorption systems with a typical hydrogen column density of {\~{}}1020 cm-2, a sky covering factor 5 × 10-3 and a number density of 25 arcmin-2 for 5.5 {\textless}= z {\textless}= 6.5. Under the assumption of a single Population III supernova (SN) formed per metal-free halo, we expect an observed supernova rate of 2.6 × 10-3 deg-2 yr-1 in the same redshift range. These metal-free stars and their SNe will be isolated and outside galaxies (at distances gsim150 h -1 kpc) and thus significantly less biased than the general population of {\~{}}108 M sun halos at z ≈ 6. SN searches for metal-free explosions must thus rely on large area surveys. If metal-free stars produce very luminous SNe, like SN2006gy, then a multi-epoch survey reaching m AB = 27 at 1 $\mu$m is sufficient for detecting them at z = 6. While the Large Synoptic Survey Telescope (LSST) will not reach this depth in the z band, it will be able to detect several tens of Population III SNe in the i and r bands at z lsim 5.5, when their observed rate is down to 3-8 × 10-4 deg-2 yr-1.},
author = {Trenti, Michele and Stiavelli, Massimo and {Michael Shull}, J.},
doi = {10.1088/0004-637X/700/2/1672},
file = {:home/jhummel/documents/papers/literature/2009/Trenti, Stiavelli, Michael Shull{\_}2009.pdf:pdf},
issn = {0004-637X},
