doi = {10.1088/0004-637X/724/1/341},
file = {:home/jhummel/documents/papers/literature/2010/Heger, Woosley{\_}2010.pdf:pdf},
issn = {0004-637X},
journal = {\apj},
keywords = {Galaxy: abundances,abundances,early universe,nuclear reactions,nucleosynthesis,stars: abundances,stars: evolution,supernovae: general},
